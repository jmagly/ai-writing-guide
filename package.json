{
  "name": "ai-writing-guide",
  "version": "1.0.0",
  "description": "Comprehensive framework for improving AI-generated content quality",
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "scripts": {
    "validate-metadata": "node tools/cli/validate-metadata.mjs",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmagly/ai-writing-guide.git"
  },
  "keywords": [
    "ai",
    "writing",
    "guide",
    "sdlc",
    "framework",
    "workspace",
    "metadata"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jmagly/ai-writing-guide/issues"
  },
  "homepage": "https://github.com/jmagly/ai-writing-guide#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.8.0",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "cli-table3": "^0.6.5",
    "simple-statistics": "^7.8.8",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
