{
  "setup-worktree": [
    "npm ci",
    "cp $ROOT_WORKTREE_PATH/.env .env 2>/dev/null || true"
  ],
  "setup-worktree-unix": [
    "npm ci || yarn install || pnpm install || echo 'No package manager lock file found'",
    "cp $ROOT_WORKTREE_PATH/.env .env 2>/dev/null || true",
    "cp $ROOT_WORKTREE_PATH/.env.local .env.local 2>/dev/null || true"
  ],
  "setup-worktree-windows": [
    "npm ci",
    "copy %ROOT_WORKTREE_PATH%\\.env .env 2>nul || echo No .env to copy"
  ]
}
